//Declaracion de funciones
void llenar_matriz(int tamaño, int matriz [][]);

int main(){
//Declaracion de variables
  int tamaño;
  int matriz [][];
//Se pide el maño de la matriz
  cout<<"Ingrese el tamaño de la matriz: ";
  cin>>tamaño;
  llenar_matriz(tamaño,matriz);
  return 0;
}

void llenar_matriz(int tamaño, int matriz [][]){
  for(int i=0;i<tamaño;i++){
    *(matriz+i)=rand()%100;
  for(int j=0;j<tamaño;j++){
    *(matriz+j)=rand()%100;
    cout<<matriz[i][j]<<" ";
    }
}
